= form_for @share, :html => { :multipart => true, :class => "form-horizontal" } do |f|
  .control-group
    = f.label :file, :class => 'control-label'
    .controls
      = f.file_field :file, :class => 'file_field'
      = image_tag(@share.file_url, :class => 'img-polaroid') if @share.file?
  .control-group
    = f.label :public, :class => 'control-label'
    .controls
      = f.check_box :public, checked: true
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    '
    = link_to t('.cancel', :default => t("helpers.links.cancel")), shares_path, :class => 'btn'